%
% Creates a cloze on one line with a fixed length.
%%
\newcommand{\clozefill}[2][]{%
  \set@local@keys{#1}%
  \leavevmode
  \directlua{
    local loptions = {
      ['descender'] = '\LCL@descender',
      ['linecolor'] = '\LCL@linecolor',
      ['textcolor'] = '\LCL@textcolor',
      ['thickness'] = '\LCL@thickness',
      ['width'] = '\LCL@width',
    }
    luacloze.hfill(loptions)
  }%
}