{
  "Lua.diagnostics.globals": ["callback", "luatexbase", "lfs"],
  "files.exclude": {
    "**/_minted*": true,
    "**/*.hd": true,
    "**/*.aux": true,
    "**/*.DS_Store": true,
    "**/*.fdb_latexmk": true,
    "**/*.fls": true,
    "**/*.glo": true,
    "**/*.gls": true,
    "**/*.idx": true,
    "**/*.ilg": true,
    "**/*.ind": true,
    "**/*.log": true,
    "**/*.out": true,
    "**/*.pdf": true,
    "**/*.synctex.gz": true,
    "**/*.tar.gz": true,
    "**/*.toc": true,
    "**/build.lua": false,
    "**/cloze/": true,
    "build/*": true
  },
  // https://github.com/sumneko/lua-language-server/wiki/Libraries
  "Lua.workspace.library": [
    // https://github.com/sumneko/lua-language-server/tree/master/meta/3rd
    "${3rd}/busted/library",
    // https://github.com/Josef-Friedrich/LuaTeX_Lua-API
    "~/repos/tex/lua-api/library",
    "~/texmf/tex",
    "${3rd}/lfs/library"
  ],
  "Lua.diagnostics.disable": [
    "redefined-local"
  ]
}
