{
  "Lua.diagnostics.globals": ["callback", "luatexbase", "lfs"],
  "files.exclude": {
    "**/_minted*": true,
    "**/*.hd": true,
    "**/*.aux": true,
    "**/*.DS_Store": true,
    "**/*.fdb_latexmk": true,
    "**/*.fls": true,
    "**/*.glo": true,
    "**/*.gls": true,
    "**/*.idx": true,
    "**/*.ilg": true,
    "**/*.ind": true,
    "**/*.log": true,
    "**/*.out": true,
    "**/*.pdf": true,
    "**/*.synctex.gz": true,
    "**/*.tar.gz": true,
    "**/*.toc": true,
    "**/build.lua": false,
    "**/cloze/": true,
    "build/*": true
  },
  // https://github.com/sumneko/lua-language-server/wiki/Libraries
  "Lua.workspace.library": [
    "${3rd}/busted/library",
    "~/repos/tex/lua-api/library",
    "~/repos/tex/farbe/farbe.lua",
    "~/repos/tex/luakeys/luakeys.lua",
    "${3rd}/lfs/library",
    "${addons}/luassert/module/library"
  ],
  "Lua.diagnostics.disable": ["redefined-local"],
  "Lua.diagnostics.severity": {
    "undefined-global": "Error!"
  },
  "latex-workshop.latex.autoBuild.run": "never",
  "Lua.workspace.checkThirdParty": false
}
